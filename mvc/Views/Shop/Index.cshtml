@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<mvc.Models.Article>

<div class="container rainbow-background">
    <div class="row justify-content-between align-items-center">
        <div class="col">
            <h1 class="rainbow-text">Artikel</h1>
        </div>
        <div class="col-auto">
            <a class="btn rainbow-button" href="/Shop/Admin">Admin Panel</a>
        </div>
    </div>

    <div class="mt-4">
        @foreach (var article in Model)
        {
            @Html.Partial("_Article", article)
        }
    </div>
</div>
